{{ header }}
<main class="page-content">
    <div class="container">
        <nav class="page-breadcrumbs">
            <ul class="page-breadcrumbs__desktop" itemscope itemtype="https://schema.org/BreadcrumbList">
                {% for breadcrumb in breadcrumbs %}
                    {% set counter = 1 %}
                    {#                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>#}
                    <li class="page-breadcrumbs__el" itemprop="itemListElement" itemscope
                        itemtype="https://schema.org/ListItem">
                        <a itemprop="item" href="{{ breadcrumb.href }}" class="page-breadcrumbs__el-link">
                            <span itemprop="name">{{ breadcrumb.text }}</span>
                            <meta itemprop="position" content="{{ counter }}">
                        </a>
                    </li>
                    {% set counter = counter  + 1 %}
                {% endfor %}
                {#                #}
                {#                <li class="page-breadcrumbs__el" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">#}
                {#                    <a itemprop="item" href="#" class="page-breadcrumbs__el-link">#}
                {#                        <span itemprop="name">Главная</span>#}
                {#                        <meta itemprop="position" content="1">#}
                {#                    </a>#}
                {#                </li>#}
                {#                <li class="page-breadcrumbs__el" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">#}
                {#                    <a itemprop="item" href="#" class="page-breadcrumbs__el-link">#}
                {#                        <span itemprop="name">Личный кабинет</span>#}
                {#                        <meta itemprop="position" content="2">#}
                {#                    </a>#}
                {#                </li>#}

            </ul>
            <a href="#" class="page-breadcrumbs__back">Назад</a>
        </nav>
        <section class="section lk">
            <h1 class="section__title">Личный кабинет</h1>
            <div class="row">
                <div class="col-xl-3 col-lg-4">
                    <aside class="lk__nav">
                        <div class="lk__nav-user">
                            <label class="lk__nav-user-avatar">
                                <input type="file" class="lk__nav-user-avatar-input">
                                <span class="lk__nav-user-avatar-body"></span>
                            </label>
                            <span class="lk__nav-user-info">
                            <span class="lk__nav-user-name">{{ customer.firstname }}</span>
                            <a href="mailto:{{ customer.email }}" class="lk__nav-user-email">{{ customer.email }}</a>
                          </span>
                        </div>
                        {{ menu }}
                    </aside>
                </div>
                <div class="col-xl-9 col-lg-8">
                    <div class="lk__body">
                        <div class="contentBlock lk__info">
                            <h2 class="lk__body-title">Личные и контактные данные</h2>
                            <form action="#" class="form">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form__field">
                                            <label class="form__label">Имя</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input" value="{{ customer.firstname }}">
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Фамилия</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input" value="{{ customer.lastname }}">
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Отчество</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input" value="{{ customer.middlename }}">
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Телефон</label>
                                            <div class="form__field-body">
                                                <input type="tel" class="form__field-input" value="{{ customer.phone }}">
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Дата рождения</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input birthday"
                                                       value="{{ customer.birthdate }}">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form__field">
                                            <label class="form__label">Email</label>
                                            <div class="form__field-body">
                                                <input type="email"
                                                       class="form__field-input form__field-input--password"
                                                       value="{{ customer.email }}" readonly>
                                                <span class="form__field-edit" data-toggle="modal"
                                                      data-target="#modalChangeEmail"></span>
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Пароль</label>
                                            <div class="form__field-body">
                                                <input type="password"
                                                       class="form__field-input form__field-input--password"
                                                       value="1234567890" readonly>
                                                <span class="form__field-passwordShow d-xl-flex d-none"></span>
                                                <span class="form__field-edit" data-toggle="modal"
                                                      data-target="#modalChangePassword"></span>
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Город</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input">
                                            </div>
                                        </div>
                                        <div class="form__field">
                                            <label class="form__label">Адрес</label>
                                            <div class="form__field-body">
                                                <input type="text" class="form__field-input">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <button class="button button--primary form__submit">Сохранить</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>
</main>
{{ footer }}