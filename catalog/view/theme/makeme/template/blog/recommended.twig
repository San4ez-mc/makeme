{% if articles|length %}
    <section class="section">
        <div class="section__header d-flex align-items-center justify-content-between flex-wrap">
            <h2 class="section__title mr-4"><span class="color-primary">Рекомендации</span> лаборатории</h2>
            <a href="{{ blog }}" class="showMore">Смотреть больше</a>
        </div>
        <div class="owl-carousel carousel-3els">
            {% for article in articles %}
                <div class="blogItem">
                    <a class="blogItem__imgContainer" href="{{ article.href }}">
                        {% if article.thumb %}
                            <img src="{{ article.thumb }}"
                                 data-srcset="
{#                    catalog/view/theme/makeme/image/blog1.jpg 767w, #}
{#                    catalog/view/theme/makeme/image/blog1@2x.jpg 1199w, #}
{#                    catalog/view/theme/makeme/image/blog1@3x.jpg 1920w#}
                  " alt="{{ article.name }}" class="lazy blogItem__img"/>
                        {% endif %}
                    </a>
                    <div class="blogItem__desc">
                        <div class="blogItem__desc-header">
                            <span class="blogItem__type blogItem__type--news">Новости</span>
                            <time class="blogItem__date" datetime="2021-04-26">{{ article.date_added }}</time>
                        </div>
                        <p class="blogItem__text">
                            <a href="{{ article.href }}">{{ article.name }}</a>
                        </p>
                        <div class="blogItem__stats">
                            <div class="like">
                                <label class="like__button">
                                    <input type="checkbox" class="like__input">
                                    <span class="like__body"></span>
                                </label>
                                <span class="like__quantity">10</span>
                            </div>
                            <a href="#" class="blogItem__comments">0</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
