{{ header }}
<div id="common-home" class="container">
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
            {% set class = 'col-sm-6' %}
        {% elseif column_left or column_right %}
            {% set class = 'col-sm-9' %}
        {% else %}
            {% set class = 'col-sm-12' %}
        {% endif %}
        <main class="page-content {{ class }}">
            <div class="container">
                {{ content_top }}
                {{ content_bottom }}
            </div>
        </main>
        {{ column_right }}</div>
</div>
{{ footer }}
